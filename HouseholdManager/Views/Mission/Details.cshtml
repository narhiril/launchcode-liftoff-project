@model HouseholdManager.Models.ViewModels.FullMissionViewModel

@{
    ViewData["Title"] = "Mission Details";
}

<h1>Mission Details</h1>
@await Html.PartialAsync("_CreationButtonsPartial")

<div>
    <hr class="homepage-break">
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        @if (!string.IsNullOrEmpty(Model.RoomName))
        {
            <dt class = "col-sm-8">
                @Html.DisplayNameFor(model => model.RoomName)
            </dt>
            <dd class="col-sm-10">
                <text class="icon-font">@Html.DisplayFor(model => model.RoomIcon)</text> @*trailing space here is intentional*@
                @Html.DisplayFor(model => model.RoomName)
            </dd>
        }
        <dt class = "col-sm-8">
            @Html.DisplayNameFor(model => model.Point)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Point)
        </dd>
        <dt class="col-sm-8">
            @Html.DisplayNameFor(model => model.DueDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DueDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Completed)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Completed)
        </dd>
        @if (!string.IsNullOrEmpty(Model.MemberName))
        {
            <dt class="col-sm-8">
                @Html.DisplayNameFor(model => model.MemberName)
            </dt>
            <dd class="col-sm-10">
                <text class="icon-font">@Html.DisplayFor(model => model.MemberIcon)</text> @*trailing space here is intentional*@
                @Html.DisplayFor(model => model.MemberName)
            </dd>
        }
    </dl>
</div>
<div class="form-group">
    <a asp-action="Edit" asp-route-id="@Model?.MissionId" class="btn btn-success form-button"> <i class="fa-solid fa-pen-to-square"></i> Edit</a>
    <a asp-action="Index" class="btn btn-secondary form-button"> <i class="fa-solid fa-arrow-left"></i> Back to List</a>
</div>
